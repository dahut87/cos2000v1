asm= lzasm
lnk= elink

pol: detect.ce exem-lib.lib exem-ce.ce memoire.ce pmode.ce isa.ce editeur.ce

all: detect.ce editeur.ce gestion.ce logo.ce pmode.ce souris.ce test.ce verifier.ce volume.ce memoire.ce

.asm.obj: 
      $(asm) $<

.obj.ce:
	$(lnk) $< $*.ce

.obj.lib:
	$(lnk) $< $*.lib

clean:
  del *.obj
  del *.ce
  del *.bak
  del *.lib
  del *.com
  del *.bin
  del *.sys
  del *.err
